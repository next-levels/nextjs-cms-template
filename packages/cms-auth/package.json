{
  "name": "@mikestraczek/cms-auth",
  "version": "1.0.5",
  "description": "Authentication and user management for the CMS template",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "cms",
    "auth",
    "nextauth",
    "authentication"
  ],
  "author": "Mike Straczek",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "next": "^15.4.3",
    "next-auth": "^5.0.0-beta.29",
    "react": "^19.1.0",
    "@prisma/client": "^6.12.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@types/bcryptjs": "^2.4.6",
    "eslint": "^9.31.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@mikestraczek/cms-core": "^1.0.3",
    "bcryptjs": "^2.4.3"
  }
}
