{
  "name": "create-next-cms",
  "version": "1.0.1",
  "description": "CLI tool to create new Next.js CMS projects",
  "main": "dist/index.js",
  "bin": {
    "create-next-cms": "dist/index.mjs"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "nextjs",
    "cms",
    "template",
    "cli",
    "create"
  ],
  "author": "Mike Straczek",
  "license": "MIT",
  "files": [
    "dist",
    "templates"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "inquirer": "^9.3.7",
    "chalk": "^5.4.1",
    "ora": "^8.2.0",
    "fs-extra": "^11.3.0",
    "validate-npm-package-name": "^5.0.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.8",
    "@types/validate-npm-package-name": "^4.0.2",
    "eslint": "^9.31.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}
